                    <p class="d-inline-block text-white">
                        {{ 'blog.footer.malt' | trans }}
                    </p>
                </a>
            </div>

            <!-- Blog Footer Copyright -->

            <div class="col-12">
                <p class="text-white element-fade-in-fix">
                    {{ 'blog.footer.copyright' | trans }}
                </p>
            </div>
        </div>
