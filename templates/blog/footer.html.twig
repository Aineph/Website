{% block blog_footer %}

    <!-- Blog Footer -->

    <div class="container-fluid">
        <div class="row mt-3">

            <!-- Blog Footer Social Github -->

            <div class="col-3 text-center">
                <a class="element-fade-in-fix" href="https://github.com/Aineph">
                    <img class="d-inline-block"
                         src="{{ asset('build/website/footer/GitHub-Mark-Light-120px-plus.png') }}"
                         alt="{{ 'blog.footer.github_alt' | trans }}" width="25px" height="25px"/>
                    <p class="d-inline-block text-white">
                        {{ 'blog.footer.github' | trans }}
                    </p>
                </a>
            </div>

            <!-- Blog Footer Social Linkedin -->

            <div class="col-3 text-center">
                <a class="element-fade-in-fix" href="https://www.linkedin.com/in/nicolas-fez/">
                    <img class="d-inline-block" src="{{ asset('build/website/footer/LI-In-Bug.png') }}"
                         alt="{{ 'blog.footer.linkedin_alt' | trans }}" width="25px" height="25px"/>
                    <p class="d-inline-block text-white">
                        {{ 'blog.footer.linkedin' | trans }}
                    </p>
                </a>
            </div>

            <!-- Blog Footer Social Soundcloud -->

            <div class="col-3 text-center">
                <a class="element-fade-in-fix" href="https://soundcloud.com/nicolas-fez">
                    <img class="d-inline-block"
                         src="{{ asset('build/website/footer/orange_white_64-94fc761.png') }}"
                         alt="{{ 'blog.footer.soundcloud_alt' | trans }}" width="25px" height="25px"/>
                    <p class="d-inline-block text-white">
                        {{ 'blog.footer.soundcloud' | trans }}
                    </p>
