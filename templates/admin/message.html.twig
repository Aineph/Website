{% extends 'base.html.twig' %}

{% block title %}
    {{ 'admin.index.title' | trans }}
{% endblock %}
{% block body %}
    <!-- TODO: Add Labels -->
    <nav id="admin-navigation" aria-label="TODO">
        {% include 'navigation.html.twig' %}
    </nav>
    <div class="container-fluid pt-5 pb-5">
        <div class="row pt-5 pb-5 border-bottom">
            <div class="col-10">
                <div class="h1 text-white">
                    {{ message.object }}
                </div>
            </div>
            <div class="col-2">
                <a class="btn btn-warning" href="mailto:{{ message.email }}">{{ 'admin.message.reply' | trans }}</a>
            </div>
        </div>
        <div class="row pt-5 pb-5 border-bottom">
            <div class="col-12">
                <div class="h5 text-white">
                    {{ message.content | nl2br }}
                </div>
            </div>
        </div>
        <div class="row pt-5 pb-5">
            <div class="col-12">
                <div class="text-white">
                    <p>
                        {{ 'admin.message.sent_by' | trans }}
                        {% if message.user %}
                            <a href="{{ path('admin_user', {'user': message.user}) }}">{{ message.name }}</a>
                        {% else %}
                            {{ message.name }}
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
