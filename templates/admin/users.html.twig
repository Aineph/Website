{% extends 'base.html.twig' %}

{% block title %}
    {{ 'admin.index.title' | trans }}
{% endblock %}
{% block body %}
    <!-- TODO: Add Labels -->
    <nav id="admin-navigation" aria-label="TODO">
        {% include 'navigation.html.twig' %}
    </nav>
    <div class="container-fluid">
        <div class="row m-5">
            <div class="col-12">
                <h1 class="h1 text-white">
                    {{ 'admin.users.users' | trans }}
                </h1>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-12 p-3">
                <table class="table text-center text-white">
                    <thead>
                    <tr>
                        <th scope="col">{{ 'admin.users.id' | trans }}</th>
                        <th scope="col">{{ 'admin.users.first_name' | trans }}</th>
                        <th scope="col">{{ 'admin.users.last_name' | trans }}</th>
                        <th scope="col">{{ 'admin.users.email' | trans }}</th>
                        <th scope="col">{{ 'admin.users.actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in userPaginator.results %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastName }}</td>
                            <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('admin_user', {'user': user.id}) }}">
                                    {{ 'admin.users.view' | trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- TODO: Add Label -->
        <div class="row">
            <div class="col-11">
                <span>
                    {{ userPaginator.firstResult }}-{{ userPaginator.lastResult }}
                    {{ 'admin.users.on' | trans }}
                    {{ userPaginator.resultsCount }}
                </span>
            </div>
            <div class="col">
                <nav aria-label="TODO">
                    <ul class="pagination">
                        {% if userPaginator.hasPreviousPage %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('admin_users', {
                                       'page': userPaginator.getPreviousPage
                                   }) }}"
                                   aria-label="{{ 'admin.users.previous' | trans }}">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">{{ 'admin.users.previous' | trans }}</span>
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#"
                                   aria-label="{{ 'admin.users.previous' | trans }}">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">{{ 'admin.users.previous' | trans }}</span>
                                </a>
                            </li>
                        {% endif %}
                        {% if userPaginator.hasNextPage %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('admin_users', {
                                       'page': userPaginator.getNextPage
                                   }) }}"
                                   aria-label="{{ 'admin.users.next' | trans }}">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">{{ 'admin.users.next' | trans }}</span>
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#"
                                   aria-label="{{ 'admin.users.next' | trans }}">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">{{ 'admin.users.next' | trans }}</span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>

{% endblock %}
