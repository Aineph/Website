<div id="header-carousel" class="carousel slide" data-ride="carousel" data-interval="10000"
     data-pause="false">
    <ol class="carousel-indicators">
        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#header-carousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner vh-100 min-vw-100">
        <div class="carousel-caption d-block h-50">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <h1 class="h1">{{ 'website.header.introduction' | trans }}</h1>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <a class="btn btn-lg btn-outline-light" href="{{ path('security_profile') }}">
                            <div class="h1">
                                {{ 'website.header.authenticate' | trans }}
                            </div>
                        </a>
                    </div>
                    {% if not app.user %}
                        <div class="col">
                            <a class="btn btn-lg btn-outline-light" href="{{ path('security_register') }}">
                                <div class="h1">
                                    {{ 'website.header.register' | trans }}
                                </div>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="carousel-item active">
            <img class="d-block vh-100 min-vw-100" src="{{ asset('build/website/header/laptop.jpg') }}"
                 alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block vh-100 min-vw-100" src="{{ asset('build/website/header/piano.jpg') }}"
                 alt="Second slide">
        </div>
    </div>
</div>
