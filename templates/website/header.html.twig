{% block website_header %}

    <!-- Website Header -->

    <div id="header-carousel" class="carousel slide" data-ride="carousel" data-interval="5000"
         data-pause="false">

        <!-- Header Carousel Inner -->

        <div class="carousel-inner">

            <!-- Header Carousel Text -->

            <div class="carousel-caption">
                <div class="container">
                    <div class="row justify-content-around">
                        <div class="col-12 p-3">
                            <h4 class="h4 font-weight-normal element-fade-in-top">
                                {{ 'website.header.introduction' | trans }}
                            </h4>
                        </div>

                        <!-- Header Carousel Authenticate -->

                        <div class="col-auto p-3">
                            <a class="btn btn-lg btn-outline-light element-fade-in-bottom"
                               href="{{ path('profile_index') }}">
                                <h4 class="h4 font-weight-normal">
                                    {{ 'website.header.authenticate' | trans }}
                                </h4>
                            </a>
                        </div>

                        <!-- Header Carousel Register -->

                        {% if not app.user %}
                            <div class="col-auto p-3">
                                <a class="btn btn-lg btn-outline-light element-fade-in-bottom"
                                   href="{{ path('security_register') }}">
                                    <h4 class="h4 font-weight-normal">
                                        {{ 'website.header.register' | trans }}
                                    </h4>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Header Carousel First Slide -->

            <div class="carousel-item active">
                <img class="img-fluid vh-100 min-vw-100"
                     src="{{ asset('build/website/header/laptop.jpg') }}"
                     alt="{{ 'website.header.first' | trans }}"/>
            </div>

            <!-- Header Carousel Second Slide -->

            <div class="carousel-item">
                <img class="img-fluid vh-100 min-vw-100"
                     src="{{ asset('build/website/header/piano.jpg') }}"
                     alt="{{ 'website.header.second' | trans }}"/>
            </div>
        </div>
    </div>
{% endblock %}
