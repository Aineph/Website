<div id="header-carousel" class="carousel slide" data-ride="carousel" data-interval="10000"
     data-pause="false">
    <ol class="carousel-indicators">
        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#header-carousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-caption">
            <div class="container">
                <div class="row">
                    <div class="col-12 p-3">
                        <h4 class="h4 element-fade-in-top">{{ 'website.header.introduction' | trans }}</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col p-1">
                        <a class="btn btn-lg btn-outline-light element-fade-in-bottom"
                           href="{{ path('security_profile') }}">
                            <h3 class="h3">{{ 'website.header.authenticate' | trans }}</h3>
                        </a>
                    </div>
                    {% if not app.user %}
                        <div class="col p-1">
                            <a class="btn btn-lg btn-outline-light element-fade-in-bottom"
                               href="{{ path('security_register') }}">
                                <h3 class="h3">{{ 'website.header.register' | trans }}</h3>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="carousel-item active">
            <img class="vh-100 min-vw-100"
                 src="{{ asset('build/website/header/laptop.jpg') }}"
                 alt="{{ 'website.header.first' | trans }}">
        </div>
        <div class="carousel-item">
            <img class="vh-100 min-vw-100"
                 src="{{ asset('build/website/header/piano.jpg') }}"
                 alt="{{ 'website.header.second' | trans }}">
        </div>
    </div>
</div>
