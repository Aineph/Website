{% extends 'base.html.twig' %}
{% block header %}
    <header>
        <div id="websiteIndexCarousel" class="carousel slide" data-ride="carousel" data-interval="10000"
             data-pause="false">
            <ol class="carousel-indicators">
                <li data-target="#websiteIndexCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#websiteIndexCarousel" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner min-vh-100 vh-100">
                <div class="carousel-caption d-none d-md-block">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h1 class="h1">{{ 'website.greetings' | trans }}</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-lg" href="{{ path('app_login') }}">
                                    <div class="h1">
                                        {{ 'account.authentication' | trans }}
                                    </div>
                                </a>
                            </div>
                            <div class="col">
                                {% if app.user %}
                                    <a class="btn btn-lg" href="{{ path('app_profile') }}">
                                        <div class="h1">
                                            {{ 'account.profile' | trans }}
                                        </div>
                                    </a>
                                {% else %}
                                    <a class="btn btn-lg" href="{{ path('app_register') }}">
                                        <div class="h1">
                                            {{ 'account.registration' | trans }}
                                        </div>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item active">
                    <img class="d-block w-100 h-100" src="{{ asset('build/carousel-laptop.jpg') }}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 h-100" src="{{ asset('build/carousel-guitar.jpg') }}" alt="First slide">
                </div>
            </div>
        </div>
    </header>
{% endblock %}
{% block body %}
    {% include 'navigation/navbar.html.twig' %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                    TODO
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block footer %}
    <footer></footer>
{% endblock %}
